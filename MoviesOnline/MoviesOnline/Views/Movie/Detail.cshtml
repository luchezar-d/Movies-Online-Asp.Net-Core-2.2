@model MoviesOnline.ViewModels.MovieViewModels.MoviesDetailViewModel

<div class="container">
    <div class="page-heading clearfix detailHeading">
        <h2 class="text-muted">View Library Item</h2>
    </div>
</div>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4">
            <div>
                <div class="detailImage" src="@Model.ImageUrl"></div>
            </div>
        </div>
        <div class="col-md-4">
            <div>
                <p id="itemTitle">@Model.Title</p>
                <p id="itemAuthor">@Model.Rating.RatingValue</p>
                <p id="itemStatus">@Model.Genre.Name</p>
            </div>
        </div>
        
    </div>
</div>