@model MoviesOnline.ViewModels.RatingViewModels.RatingIndexViewModel
@{
    ViewBag.Title = "Rating Index";
}

<div id="movies">
    <div id="assetsTable" style="margin: auto;
                                 width: 50%;
                                 padding: 10px;">
        <h1 style="text-align:center">Rating List</h1>
        <hr />
        @foreach (var rating in @Model.ratings)
        {
            <h4 style="text-align:center">Rating Value</h4>
            <a asp-controller="Rating" asp-action="Detail" asp-route-id="@rating.Id">

                <h2 style="text-align:center"> @rating.RatingValue</h2>
                <hr />
            </a>
        }
    </div>
</div>
